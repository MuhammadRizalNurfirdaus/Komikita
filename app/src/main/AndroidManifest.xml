<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logokomik"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logokomik"
        android:supportsRtl="true"
        android:theme="@style/Theme.Komikita">
        
        <!-- Splash Screen as LAUNCHER -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Komikita.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Authentication Activities -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Komikita.NoActionBar" />
        
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Komikita.NoActionBar" />
        
        <!-- Main Dashboard -->
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="false" />
        
        <!-- Comic List Activities -->
        <activity
            android:name=".ui.manga.MangaListActivity"
            android:exported="false"
            android:label="Manga" />
        
        <activity
            android:name=".ui.manhwa.ManhwaListActivity"
            android:exported="false"
            android:label="Manhwa" />
        
        <activity
            android:name=".ui.manhua.ManhuaListActivity"
            android:exported="false"
            android:label="Manhua" />
        
        <!-- Search Activity -->
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="false"
            android:label="Search"
            android:launchMode="singleTop" />
        
        <!-- Detail and Reader -->
        <activity
            android:name=".ui.detail.KomikDetailActivity"
            android:exported="false"
            android:label="Comic Detail" />
        
        <activity
            android:name=".ui.reader.ChapterReaderActivity"
            android:exported="false"
            android:theme="@style/Theme.Komikita.NoActionBar"
            android:label="Read Chapter" />
        
        <!-- User Features -->
        <activity
            android:name=".ui.favorites.FavoritesActivity"
            android:exported="false"
            android:label="Favorites" />
        
        <activity
            android:name=".ui.downloads.DownloadsActivity"
            android:exported="false"
            android:label="Downloads" />
        
        <activity
            android:name=".ui.downloads.DownloadChaptersActivity"
            android:exported="false"
            android:label="Chapters" />
        
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="false"
            android:label="Profile" />

        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Komikita.NoActionBar" />
        
        <!-- Additional Activities -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="Settings" />
        
        <activity
            android:name=".ui.genres.GenresActivity"
            android:exported="false"
            android:label="Browse by Genre" />
        
        <activity
            android:name=".ui.history.HistoryActivity"
            android:exported="false"
            android:label="Reading History" />
        
        <!-- Debug/Setup Activities -->
        <activity
            android:name=".ui.debug.SetupInfoActivity"
            android:exported="false"
            android:label="Google Sign-In Setup" />
        
        <!-- Original MainActivity kept for compatibility -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
    </application>

</manifest>