        <item name="colorPrimary">@color/brand_orange</item>
        <item name="colorPrimaryVariant">@color/brand_orange</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/brand_orange</item>
