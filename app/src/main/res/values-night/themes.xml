<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme -->
    <style name="Base.Theme.Komikita" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/brand_orange</item>
        <item name="colorPrimaryVariant">@color/brand_orange</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">@color/brand_orange</item>
        <item name="colorSecondaryVariant">#E55A2B</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSecondaryContainer">#FFDDBB</item>
        <item name="colorOnSecondaryContainer">#FF6B35</item>
        <!-- Status bar and Navigation bar colors for Dark Mode -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">@color/background_primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="Theme.Komikita" parent="Base.Theme.Komikita" />
    
    <style name="Theme.Komikita.NoActionBar" parent="Theme.Komikita">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="Theme.Komikita.FullScreen" parent="Theme.Komikita.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>